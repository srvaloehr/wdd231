// artist.js
document.addEventListener("DOMContentLoaded", () => {
  const artistGallery = document.getElementById("artist-gallery");
  const modal = document.getElementById("artistModal");
  const modalBody = document.getElementById("modal-body");
  const closeModalBtn = document.getElementById("closeModal");

  const artists = [
    {
      name: "Vincent van Gogh",
      image: "images/van-gogh.jpg",
      info: "A Dutch post-impressionist painter known for his bold colors and emotional honesty. Famous works include *Starry Night* and *Sunflowers*."
    },
    {
      name: "Leonardo da Vinci",
      image: "images/da-vinci.jpg",
      info: "An Italian polymath of the Renaissance, celebrated for *Mona Lisa* and *The Last Supper*. His notebooks reveal his genius in art and science."
    },
    {
      name: "Frida Kahlo",
      image: "images/frida.jpg",
      info: "Mexican painter known for self-portraits and vivid symbolism exploring identity, pain, and cultural heritage."
    }
  ];

  // Dynamically build artist cards
  artists.forEach(artist => {
    const card = document.createElement("div");
    card.className = "card";
    card.innerHTML = `
      <img src="${artist.image}" alt="${artist.name}">
      <div class="card-content">
        <h3>${artist.name}</h3>
        <button class="learn-more">Learn More</button>
      </div>
    `;

    // Show modal when Learn More clicked
    card.querySelector(".learn-more").addEventListener("click", () => {
      modalBody.innerHTML = `
        <h2>${artist.name}</h2>
        <p>${artist.info}</p>
      `;
      modal.style.display = "flex";
    });

    artistGallery.appendChild(card);
  });

  // Close modal
  closeModalBtn.addEventListener("click", () => {
    modal.style.display = "none";
  });

  // Click outside modal closes it
  window.addEventListener("click", (e) => {
    if (e.target === modal) {
      modal.style.display = "none";
    }
  });
});




